<div class="col-12 col-sm-6 col-lg-4 text-center d-flex justify-content-center">
    <div class="card mb-3 border-card" style="width: 18rem;border-color:{{ achievement.category.color }};">
        <div class="card-img-top"
             style='background-image: url("{{ achievement.image is not null ? asset('local_images/' ~ achievement.image)
                                                                            : 'http://via.placeholder.com/200x150' }}")'>
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ achievement.name }}</h5>
            <p class="card-text">{{ achievement.description}}</p>
            {% if achievement.status is not null %}
                <a href="{{ path('app_achievement_detail', {'id': achievement.id}) }}" class="btn btn-primary">Voir d√©tail</a>
                <a href="{{ path('app_achievement_processachievement', {'id': achievement.id}) }}" class="mt-3 btn {{ achievement.status.class }}">{{ achievement.status.message }}</a>
            {% endif %}
        </div>
    </div>
</div>