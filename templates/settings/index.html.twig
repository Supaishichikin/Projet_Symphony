{% extends 'base.html.twig' %}

{% block title %}Paramètres - {{ parent() }}{% endblock %}

{% block body %}
    <h1>{{ user.username }} - Paramètres</h1>

    <div class="card ">
        <div class="row">
            <div class="col-1">
                Pseudo
            </div>
            <div class="col-3">
                <span class="currentField">{{ user.username }}</span>
                <div class="newField d-none">
                    {{ form_start(pseudoForm) }}
                    {{ form_row(pseudoForm.pseudo) }}
                    <button class="btn btn-success" type="submit">Enregistrer</button>
                    {{ form_end(pseudoForm) }}
                </div>
            </div>
            <div class="col-2 offset-6">
                <button class="editField">Modifier</button>
            </div>
        </div>
    </div>

    <div class="card mt-5">
        <div class="row">
            <div class="col-1">
                Email
            </div>
            <div class="col-3">
                <span class="currentField">{{ user.email }}</span>
                <div class="newField d-none">
                    {{ form_start(emailForm) }}
                    {{ form_row(emailForm.email) }}
                    <button class="btn btn-success" type="submit">Enregistrer</button>
                    {{ form_end(emailForm) }}
                </div>
            </div>
            <div class="col-2 offset-6">
                <button class="editField">Modifier</button>
            </div>
        </div>
    </div>

    <div class="card mt-5">
        <div class="row">
            <div class="col-1">
                Mot de passe
            </div>
            <div class="col-3">
                <span class="currentField">********************</span>
                <div class="newField d-none">
                    {{ form_start(passwordForm) }}
                    <div class="form-group">
                        <label class="required" for="currentPassword">Mot de passe actuel</label>
                        <input type="password" id="currentPassword" name="currentPassword"
                               class="form-control" required="required">
                    </div>
                    {{ form_row(passwordForm.plainPassword) }}
                    <button class="btn btn-success" type="submit">Enregistrer</button>
                    {{ form_end(passwordForm) }}
                </div>
            </div>
            <div class="col-2 offset-6">
                <button class="editField">Modifier</button>
            </div>
        </div>
    </div>

    <a href="{{ path('app_settings_deleteaccount') }}" class="mt-5 btn btn-danger">Supprimer votre compte</a>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('javascript/settings.js') }}"></script>
{% endblock %}
