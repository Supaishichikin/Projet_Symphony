{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/index.css') }}">
    <link rel="stylesheet" href="{{ asset('style/contact.css') }}">
{% endblock %}

{% block body %}
    <h1 class="my-5">Contact</h1>
    <h2>Faites nous part de votre demande par mail :</h2>
    <div class="row contact-form">
        <div class="col-12 col-md-6">

            {{ form_start(form) }}

            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.subject) }}
            {{ form_row(form.body) }}
            <button type="submit" class="btn">
                Envoyer
            </button>
            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}