{% extends 'base.html.twig' %}

{% block title %}AchievementController{% endblock %}

{% block body %}



<div class="row">
        <div class="col-5">
            <h1 style="font-size: 1.7em" class="mb-4 mt-2">Enregistrement achievement</h1>
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.category) }}
            {{ form_row(form.description) }}
            {{ form_end(form) }}
            <div class="text-right">
                <button type="submit" class="btn btn-primary">
                    Enregistrer
                </button>
                <a href="{{ path('app_admin_achievement_index')}}" class="btn btn-outline-secondary">
                    Retour
                </a>
            </div>
        </div>
    <div class="col-7">
        <h2 class="text-center" style="font-size: 1.7em">Information de l'admin</h2>
        <div class="d-flex justify-content-center mt-4">
            <span>Pseudo : {{ user.username }}</span>
        </div>
        <div class="d-flex justify-content-center m-auto">
            <img src="http://via.placeholder.com/300x250" alt="#peut etre pas nécessaire comme donnée meme pour l'admin">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 d-flex justify-content-center mt-3">
        <h2 class="mt-3" style="font-size: 1.7em">Quelques exemple de rendu :</h2>
    </div>
    <div class="col-8 offset-2 d-flex mt-2">
        {% for achievement in achievements %}
            {{ render(controller('App\\Controller\\AchievementController::card', {'achievement' : achievement})) }}
        {% endfor %}
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
    <span>
        {{ knp_pagination_render(achievements,'@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
    </span>
    </div>
</div>

{% endblock %}