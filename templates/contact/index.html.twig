{% extends 'base.html.twig' %}


{% block body %}
    <h1>Contact</h1>
    <hr>
    <div style="width: 50%">
        {{ form_start(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}
        <button type="submit" class="btn btn-primary">
            Envoyer
        </button>
        {{ form_end(form) }}

    </div>

{% endblock %}