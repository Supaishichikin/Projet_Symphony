{% extends 'base.html.twig' %}

{% block title %}{{ app.user ~ ' - ' ~ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/profile.css') }}">
{% endblock %}

{% block body %}
    <h1 class="my-5">{{ app.user }} - Profil</h1>
    <div class="row">
        <div class="col-12 col-lg-6">
            <img src="http://via.placeholder.com/300x300" alt="...">
        </div>
    </div>
    <h5 class="mt-5 see-achievements">Voir les activités en cours <i class="fas fa-chevron-right"></i></h5>
    <div class="achievements row mt-5">
        {% for achievement in in_progress %}
            {{ render(controller('App\\Controller\\AchievementController::card', {'achievement' : achievement})) }}
        {% else %}
            <p>Vous n'avez aucune activité en cours</p>
        {% endfor %}
    </div>
    <h5 class="mt-5 see-achievements">Voir les activités déjà complétées <i class="fas fa-chevron-right"></i></h5>
    <div class="achievements row mt-5">
        {% for achievement in completed %}
            {{ render(controller('App\\Controller\\AchievementController::card', {'achievement' : achievement})) }}
        {% else %}
            <p>Vous n'avez complété aucune activité</p>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('javascript/profile.js') }}"></script>
{% endblock %}
